config VIDEO_FIMC
	bool "Samsung Camera Interface (FIMC) driver"
	depends on VIDEO_SAMSUNG && (CPU_S5PC100 || CPU_S5PC110 || CPU_S5P6442)
	default n
	---help---
	  This is a video4linux driver for Samsung FIMC device.

config VIDEO_FIMC_DEBUG
	bool "FIMC driver debug messages"
	depends on VIDEO_FIMC

config VIDEO_FIMC_MIPI
	bool "MIPI-CSI2 Slave Interface support"
	depends on VIDEO_FIMC && (CPU_S5PC100 || CPU_S5PC110)

config VIDEO_FIMC_DYNAMIC_BUFFER
	bool "Dynamic Buffer support (EXPERIMENTAL)"
	depends on VIDEO_FIMC && CPU_S5PC110
	---help---
	  This enables changing buffer address at run-time for large buffers.
	  User must configure the buffer count as 12 using VIDIOC_REQBUFS ioctl and
	  the mmap() is disabled for this feature, only available to take physical addresses
	  using VIDIOC_S_CTRL with V4L2_CID_PADDR_# arguments.

config VIDEO_IPC
	bool "IPC support"
	depends on VIDEO_FIMC && CPU_S5PC110

