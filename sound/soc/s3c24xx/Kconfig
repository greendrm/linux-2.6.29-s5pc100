config SND_S3C24XX_SOC
	tristate "Samsung SoC Audio Drivers"
	depends on ARCH_S5PC1XX || ARCH_S5PC11X || ARCH_S5P64XX
	help
	  Say Y or M if you want to add support for codecs attached to
	  the Samsung AC97, I2S or SSP interface. You will also need
	  to select the audio interfaces to support below.

config SND_S3C24XX_SOC_I2S
	tristate

config SND_S3C_I2SV2_SOC
	tristate

config SND_S3C2412_SOC_I2S
	tristate

config SND_S5P_USE_XCLK_OUT
	bool
	depends on MACH_SMDKC110
	default y

config SND_S5P_SOC_I2S
	tristate
	select SND_S3C_I2SV2_SOC

config SND_S3C2443_SOC_AC97
	tristate
	select AC97_BUS
	select SND_SOC_AC97_BUS

config SND_S5P_SOC_AC97
	tristate
	select AC97_BUS
	select SND_SOC_AC97_BUS

config SND_S3C_SOC_PCM
	tristate

config SND_S5P_SOC_WM8580
	tristate "SoC Audio support for WM8580 on SMDK-S5P"
	depends on SND_S3C24XX_SOC && (MACH_SMDKC110 || MACH_SMDKC100)
	select SND_SOC_WM8580
	help
	  Sat Y if you want to add support for SoC audio on the SMDKS5P.

choice
	prompt "Select WM8580 Audio Primary Port Type"
	depends on SND_S5P_SOC_WM8580 && (MACH_SMDKC110 || MACH_SMDKC100)

config	SND_S5P_PRIMARY_NONE
	bool "None"

config	SND_S5P_PRIMARY_I2S
	bool "Use I2S-v5 Bus"
	select SND_S5P_SOC_I2S

endchoice

choice
	prompt "Select WM8580 Audio Secondary Port Type"
	depends on SND_S5P_SOC_WM8580 && (MACH_SMDKC110 || MACH_SMDKC100)

config	SND_S5P_SECONDARY_NONE
	bool "None"

config	SND_S5P_SECONDARY_I2S
	bool "Use I2S-v2 Bus"
	select SND_S5P_SOC_I2S
	select SND_S3C_I2SV2_SOC

config	SND_S5P_SECONDARY_PCM
	bool "Use PCM Bus"
	depends on SND_S5P_USE_XCLK_OUT
	select SND_S3C_SOC_PCM

endchoice


config SND_WM8580_MASTER
	bool "WM8580 Codec is I2S Master"
	depends on SND_S5P_SOC_WM8580 && (SND_S5P_PRIMARY_I2S || \
			SND_S5P_SECONDARY_I2S)
	default n
	help
	  Say Y if you want to run SoC as I2S-Slave and CODEC as I2S-Master.

config SND_S3C24XX_SOC_NEO1973_WM8753
	tristate "SoC I2S Audio support for NEO1973 - WM8753"
	depends on SND_S3C24XX_SOC && MACH_NEO1973_GTA01
	select SND_S3C24XX_SOC_I2S
	select SND_SOC_WM8753
	help
	  Say Y if you want to add support for SoC audio on smdk2440
	  with the WM8753.

config SND_S3C24XX_SOC_SMDK2443_WM9710
	tristate "SoC AC97 Audio support for SMDK2443 - WM9710"
	depends on SND_S3C24XX_SOC && MACH_SMDK2443
	select SND_S3C2443_SOC_AC97
	select SND_SOC_AC97_CODEC
	help
	  Say Y if you want to add support for SoC audio on smdk2443
	  with the WM9710.

config SND_S3C24XX_SOC_LN2440SBC_ALC650
	tristate "SoC AC97 Audio support for LN2440SBC - ALC650"
	depends on SND_S3C24XX_SOC
	select SND_S3C2443_SOC_AC97
	select SND_SOC_AC97_CODEC
	help
	  Say Y if you want to add support for SoC audio on ln2440sbc
	  with the ALC650.

config SND_S3C24XX_SOC_S3C24XX_UDA134X
	tristate "SoC I2S Audio support UDA134X wired to a S3C24XX"
       	depends on SND_S3C24XX_SOC
       	select SND_S3C24XX_SOC_I2S
       	select SND_SOC_UDA134X

config SND_S5P_SOC_SMDK_WM9713
	tristate "SoC AC97 Audio support for SMDKS5P - WM9713"
	depends on SND_S3C24XX_SOC && (MACH_SMDKC110 || MACH_SMDKC100)
	select SND_S5P_SOC_AC97
	select SND_SOC_AC97_CODEC
	select SND_SOC_WM9713
	help
	  Say Y if you want to add support for SoC audio on smdks5p
	  with the WM9713.

config SND_S5PC100_SOC_UNIVERSAL_AK4671
	tristate "SoC I2S Audio support for UNIVERSAL - AK4671"
	depends on MACH_UNIVERSAL
	select SND_S5P_SOC_I2S
	select SND_SOC_AK4671
	select SND_SOC_MAX9877
	help
	  Say Y if you want to add support for SoC audio on universal
	  with the AK4671.
